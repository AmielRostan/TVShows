<form method='input' action='/seasons'>
  Season: <input type=integer name='sea'/>
  <input type='submit' />
</form><br>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Title</th>
      <th>Emmited at</th>
      <th>Minutes</th>
      <th>Season number</th>
      <th>Series name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td><%= episode.number %></td>
        <td><%= episode.title %></td>
        <td><%= episode.emmited_at %></td>
        <td><%= episode.minutes %></td>
        <td><%= episode.season.number %></td>
        <td><%= episode.season.series.name %></td>
        <td><%= link_to 'Show', episode %></td>
        <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
        <td><%= link_to 'Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

