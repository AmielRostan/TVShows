<form method='input' action='/series'>
  Series: <input type=integer name='ser'/>
  <input type='submit' />
</form><br>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Begins at</th>
      <th>Serie</th>
      <th>Minutes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @seasons.each do |season| %>
      <tr>
        <td><%= season.number %></td>
        <td><%= season.begins_at %></td>
        <td><%= season.series.name %></td>
        <td><%= season.episodes.sum(:minutes) %></td>
        <td><%= link_to 'View Episodes', episodes_path(:season_id => season.id) %></td>
        <td><%= link_to 'Show', season %></td>
        <td><%= link_to 'Edit', edit_season_path(season) %></td>
        <td><%= link_to 'Destroy', season, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

